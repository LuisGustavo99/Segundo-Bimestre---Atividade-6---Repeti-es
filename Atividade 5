programa
{
	
	funcao inicio()
	{
		inteiro numero
		inteiro quant_par = 0, quant_impar = 0
		
		para(inteiro i=1; i <= 5; i++)
		{
		escreva("Me informe o ", i,"° número inteiro: ")
		leia(numero)

		se(numero % 2 == 0)
		{
			quant_par++
		}
		senao
		{
			quant_impar++
		}
		}
		escreva("Você informou ", quant_par," números pares e ", quant_impar," números ímpares.")
	}
}
